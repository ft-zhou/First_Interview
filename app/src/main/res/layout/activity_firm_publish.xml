<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="基本信息"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="3dp"
                android:background="@color/background"/>
            <RelativeLayout
                android:id="@+id/rl_recruit_detailposition"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/tv_recruit_detailposition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="具体岗位名称"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@id/tv_recruit_detailposition"
                    android:layout_centerVertical="true"
                    android:textColor="@color/red"
                    android:textSize="16sp"
                    android:text="*"/>
                <EditText
                    android:id="@+id/et_recruit_detailposition"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/right_icon_recruit_detailposition"
                    android:background="@null"
                    android:textSize="14sp"
                    android:hint="请填写具体的岗位名称"/>
                <ImageView
                    android:id="@+id/right_icon_recruit_detailposition"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_recruit_position"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/tv_recruit_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="工作岗位"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@id/tv_recruit_position"
                    android:layout_centerVertical="true"
                    android:textColor="@color/red"
                    android:textSize="16sp"
                    android:text="*"/>
                <TextView
                    android:id="@+id/pv_recruit_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/right_icon_recruit_position"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"/>
                <ImageView
                    android:id="@+id/right_icon_recruit_position"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_recruit_place"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/tv_recruit_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="工作地点"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@id/tv_recruit_place"
                    android:layout_centerVertical="true"
                    android:textColor="@color/red"
                    android:textSize="16sp"
                    android:text="*"/>
                <TextView
                    android:id="@+id/pv_recruit_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/right_icon_recruit_place"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"/>
                <ImageView
                    android:id="@+id/right_icon_recruit_place"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_recruit_salary"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/tv_recruit_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="薪资"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@id/tv_recruit_salary"
                    android:layout_centerVertical="true"
                    android:textColor="@color/red"
                    android:textSize="16sp"
                    android:text="*"/>
                <TextView
                    android:id="@+id/pv_recruit_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/right_icon_recruit_salary"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:text=""/>
                <ImageView
                    android:id="@+id/right_icon_recruit_salary"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right"/>
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="7dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="职位描述"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="3dp"
                android:background="@color/background"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/tv_recruit_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textSize="16sp"
                    android:text="具体描述"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@id/tv_recruit_description"
                    android:textColor="@color/red"
                    android:textSize="16sp"
                    android:text="*"/>
                <EditText
                    android:id="@+id/et_recruit_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_recruit_description"
                    android:layout_margin="3dp"
                    android:paddingTop="2dp"
                    android:minLines="3"
                    android:gravity="top"
                    android:background="@null"
                    android:textSize="14sp"
                    android:hint="请填写该职位的具体描述，例如工作内容、岗位要求等"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@color/background"/>
            <RelativeLayout
                android:id="@+id/rl_recruit_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/tv_recruit_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textSize="16sp"
                    android:text="关键词（例如福利待遇、职位特色等）"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_recruit_tag">
                    <EditText
                        android:id="@+id/et_recruit_tag1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:paddingTop="2dp"
                        android:maxLines="1"
                        android:maxLength="5"
                        android:gravity="top"
                        android:background="@null"
                        android:textSize="14sp"
                        android:hint="关键词一"/>
                    <EditText
                        android:id="@+id/et_recruit_tag2"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:paddingTop="2dp"
                        android:maxLines="1"
                        android:maxLength="5"
                        android:gravity="top"
                        android:background="@null"
                        android:textSize="14sp"
                        android:hint="关键词二"/>
                    <EditText
                        android:id="@+id/et_recruit_tag3"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:paddingTop="2dp"
                        android:maxLines="1"
                        android:maxLength="5"
                        android:gravity="top"
                        android:background="@null"
                        android:textSize="14sp"
                        android:hint="关键词三"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="7dp" />
        <Button
            android:id="@+id/btn_recruit_publish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="18sp"
            android:text="发布"/>
    </LinearLayout>
</ScrollView>